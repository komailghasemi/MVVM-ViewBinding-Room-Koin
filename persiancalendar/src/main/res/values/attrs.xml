<resources>
    <declare-styleable name="PersianMaterialAlertDialog">
        <attr name="backgroundInsetStart" format="dimension" />
        <attr name="backgroundInsetTop" format="dimension" />
        <attr name="backgroundInsetEnd" format="dimension" />
        <attr name="backgroundInsetBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PersianMaterialCalendarItem">
        <attr name="android:insetLeft" />
        <attr name="android:insetTop" />
        <attr name="android:insetRight" />
        <attr name="android:insetBottom" />
        <attr name="itemFillColor" format="color" />
        <attr name="itemTextColor" format="color" />
        <attr name="itemStrokeColor" format="color" />
        <attr name="itemStrokeWidth" format="dimension" />
        <attr name="itemShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
        </attr>
        <attr name="itemShapeCornerRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="PersianMaterialCalendar">
        <attr name="dayStyle" format="reference" />
        <attr name="dayInvalidStyle" format="reference" />
        <attr name="daySelectedStyle" format="reference" />
        <attr name="dayTodayStyle" format="reference" />
        <attr name="yearStyle" format="reference" />
        <attr name="yearSelectedStyle" format="reference" />
        <attr name="yearTodayStyle" format="reference" />
        <attr name="rangeFillColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SimpleTextView">
        <attr name="typeface" format="reference"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <attr name="persianMaterialCalendarTheme" format="reference" />
    <attr name="persianMaterialCalendarStyle" format="reference" />

    <attr name="navigationToggleStyle" format="reference"/>
    <attr name="navigationButtonStyle" format="reference"/>
    <attr name="dayTextAppearance" format="reference"/>
    <attr name="positiveButtonStyle" format="reference"/>
    <attr name="cancelButtonStyle" format="reference"/>
    <attr name="headerTitleTextStyle" format="reference"/>
    <attr name="headerSelectionTextStyle" format="reference"/>
    <attr name="headerBackgroundColor" format="color"/>
</resources>