<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:id="@+id/picker_header"
        android:background="?attr/headerBackgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/calendar_header_content_padding"
        android:paddingLeft="@dimen/calendar_header_content_padding"
        android:paddingEnd="@dimen/calendar_header_content_padding"
        android:paddingRight="@dimen/calendar_header_content_padding"
        android:paddingBottom="@dimen/calendar_header_content_padding">

        <FrameLayout
            android:id="@+id/picker_header_title_and_selection"
            android:layout_width="@dimen/calendar_landscape_header_width"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:paddingEnd="@dimen/calendar_header_text_padding"
            android:paddingRight="@dimen/calendar_header_text_padding">

            <include layout="@layout/picker_header_title_text" />

            <include layout="@layout/picker_header_selection_text" />

        </FrameLayout>
    </LinearLayout>


</merge>
